<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.game.mybatis.dao.UserMapper" >
  <resultMap id="UserResult" type="com.game.mybatis.model.User" >
    <id column="user_id" property="user_id" jdbcType="INTEGER" />
    <result column="username" property="username" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="login_time" property="loginTime" jdbcType="TIMESTAMP" />
    <result column="logout_time" property="logoutTime" jdbcType="TIMESTAMP" />
    <result column="country" property="country" jdbcType="VARCHAR" />
    <result column="province" property="province" jdbcType="VARCHAR" />
    <result column="location" property="location" jdbcType="VARCHAR" />
    <result column="state" property="state" jdbcType="INTEGER" />
    <result column="ipAddress" property="ipAddress" jdbcType="VARCHAR" />
    <association property="game_Info" column="game_info_id" javaType="Game_Info" select="selectGameInfo">
    </association>
    <association property="battle_Info" column="battle_info_id" javaType="Battle_Info" select="selectBattleInfo">
    </association>
    <association property="role_Info" column="role_info_id" javaType="Role_Info" select="selectRoleInfo">
    </association>
  </resultMap>
  
  <resultMap id="GameInfoResult" type="Game_Info" >
  	<id property="game_id" column="game_info_id"></id>
  </resultMap>
  <resultMap id="BattleInfoResult" type="Battle_Info" >
  	<id property="battle_id" column="battle_info_id"></id>
  </resultMap>
  <resultMap id="RoleInfoResult" type="Role_Info" >
  	<id property="roleId" column="role_id"></id>
  </resultMap>
  
  <select id="selectGameInfo" resultMap="GameInfoResult">
  	select * from game_info where game_id = #{id}
  </select>
  <select id="selectBattleInfo" resultMap="BattleInfoResult">
  	select * from battle_info where battle_id = #{id}
  </select>
  <select id="selectRoleInfo" resultMap="RoleInfoResult">
  	select * from role_info where role_id = #{id}
  </select>
