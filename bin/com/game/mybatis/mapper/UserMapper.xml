  <delete id="deleteById" parameterType="java.lang.Integer" >
    delete from user
    where user_id = #{user_id,jdbcType=INTEGER}
  </delete>
  <insert id="createUser" parameterType="com.game.mybatis.model.User" >
    insert into user (user_id, username, create_time, 
      login_time, logout_time, country, 
      province, location, state, 
      room_info_id, battle_info_id, role_info_id, ipAddress
      )
    values (#{user_id}, #{username}, #{createTime}, 
      #{loginTime}, #{logoutTime}, #{country}, 
      #{province}, #{location}, #{state}, 
      #{room_Info.roomId}, #{battle_Info.battle_id}, #{role_Info.roleId}, #{ipAddress}
      )
  </insert>
  <update id="updateUser" parameterType="com.game.mybatis.model.User" >
    update user
    <set >
      <if test="username != null" >
        username = #{username,jdbcType=VARCHAR},
      </if>
      <if test="createTime != null" >
        create_time = #{createTime,jdbcType=TIMESTAMP},
      </if>
      <if test="loginTime != null" >
        login_time = #{loginTime,jdbcType=TIMESTAMP},
      </if>
      <if test="logoutTime != null" >
        logout_time = #{logoutTime,jdbcType=TIMESTAMP},
      </if>
      <if test="country != null" >
        country = #{country,jdbcType=VARCHAR},
      </if>
      <if test="province != null" >
        province = #{province,jdbcType=VARCHAR},
      </if>
      <if test="location != null" >
        location = #{location,jdbcType=VARCHAR},
      </if>
      <if test="state != null" >
        state = #{state},
      </if>
      <if test="ipAddress != null" >
        ipAddress = #{ipAddress,jdbcType=VARCHAR},
      </if>
      <if test="game_Info != null" >
        room_info_id = #{room_Info.roomId,jdbcType=INTEGER},
      </if>
      <if test="battle_Info != null" >
        battle_info_id = #{battle_Info.battle_id,jdbcType=INTEGER},
      </if>
      <if test="role_Info != null" >
        role_info_id = #{role_Info.roleId,jdbcType=INTEGER},
      </if>
    </set>
    where user_id = #{user_id,jdbcType=INTEGER}
  </update>
</mapper>